<% set_page_sub_title t('views.notifications.index.title') %>

<%= render 'share/page_title' %>

<div class="row">
  <div class="col-md-2">

  </div>
  <!-- //.col -->

  <div class="col-md-8">
    <div ng-controller="NotificationsCtrl">
      <div class="panel panel-default" ng-repeat="notification in notifications">
        <div class="panel-heading">
          <h3 class="panel-title">{{ notification.title }}</h3>
        </div>
        <div class="panel-body">
          {{ notification.content }}
        </div>
        <div class="panel-footer">
          <span class="label label-default">
            {{ notification.created_at | date : 'yyyy/MM/dd HH:mm' }}
          </span>
        </div>
      </div>
      <pagination boundary-links="true"
                  total-items="notificationTotalCount"
                  num-pages="notificationTotalPages"
                  ng-model="notificationCurrentPages"
                  ng-change="pageChanged()"
                  items-per-page="15"
                  max-size="5"
                  align="false"
                  previous-text="&lsaquo;"
                  next-text="&rsaquo;"
                  first-text="&laquo;"
                  last-text="&raquo;">
      </pagination>
    </div>
  </div>
  <!-- //.col -->

  <div class="col-md-2">

  </div>
  <!-- //.col -->
</div>
