<div class="intro-header">
  <div class="intro-message">
    <h1>ComiGuide</h1>
    <h3>ComicMarket &amp; COMIC1 participants support site.</h3>
    <hr class="intro-divider">
    <ul class="list-inline intro-social-buttons">
      <li>
        <%= link_to 'https://twitter.com/umatoma', class: 'btn btn-default btn-lg', target: '_blank' do %>
          <i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter@umatoma</span>
        <% end %>
      </li>
      <li>
        <%= link_to 'http://comiguide.hatenablog.com/', class: 'btn btn-default btn-lg', target: '_blank' do %>
          <i class="fa fa-wordpress fa-fw"></i> <span class="network-name">comiguide’s blog</span>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="content-section section-left">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Death to the Stock Photo:<br>Special Thanks</h2>
                <p class="lead">A special thanks to <a target="_blank" href="http://join.deathtothestockphoto.com/">Death to the Stock Photo</a> for providing the photographs that you see in this template. Visit their website to become a member.</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img class="img-responsive" src="http://startbootstrap.com/templates/landing-page/img/ipad.png" alt="">
            </div>
        </div>
    </div>
    <!-- //.container -->
</div>
<!-- //.content-section -->

<div class="content-section section-right">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Death to the Stock Photo:<br>Special Thanks</h2>
                <p class="lead">A special thanks to <a target="_blank" href="http://join.deathtothestockphoto.com/">Death to the Stock Photo</a> for providing the photographs that you see in this template. Visit their website to become a member.</p>
            </div>
            <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                <img class="img-responsive" src="http://startbootstrap.com/templates/landing-page/img/ipad.png" alt="">
            </div>
        </div>
    </div>
    <!-- //.container -->
</div>
<!-- //.content-section -->

<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <h2>ComiGuideを始める <i class="fa fa-thumbs-o-up"></i></h2>
      </div>
      <div class="col-lg-6">
        <ul class="list-inline banner-social-buttons">
          <li>
            <%= link_to new_user_registration_path, class: 'btn btn-default btn-lg' do %>
              <i class="fa fa-chevron-circle-up"></i> <span class="network-name"><%= t('views.users.sign_up') %></span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: 'btn btn-default btn-lg' do %>
              <i class="fa fa-sign-in"></i> <span class="network-name"><%= t('views.users.sign_in') %></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /.container -->
</div>
<!-- /.banner -->
