<form class="form-update-notification">
  <div class="form-group">
    <label><%= Notification.human_attribute_name(:title) %></label>
    <input class="form-control"
           type="text"
           data-ng-model="notification.title">
  </div>
  <div class="form-group">
    <label><%= Notification.human_attribute_name(:content) %></label>
    <textarea class="form-control"
              rows="10"
              data-ng-model="notification.content">
    </textarea>
  </div>
  <div class="form-group">
    <label><%= Notification.human_attribute_name(:status) %></label>
    <select class="form-control"
            data-ng-options="s.key as s.value for s in notification.status_options"
            data-ng-model="notification.status">
    </select>
  </div>
  <div class="form-group">
    <label><%= Notification.human_attribute_name(:target) %></label>
    <select class="form-control"
            data-ng-options="t.key as t.value for t in notification.target_options"
            data-ng-model="notification.target">
    </select>
  </div>
  <div class="btn btn-update btn-block" ng-click="updateNotification(notification)">
    Update
  </div>
</form>
