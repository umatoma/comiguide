<% set_page_sub_title t('views.users.new_password') %>

<div class="page-header">
  <h1><%= t('views.users.new_password') %></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="well">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'share/validation_errors', resource: resource %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div><%= f.submit t('views.users.passwords.new.form_submit'), class: "btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>

<%= render "users/shared/links" %>
