<% set_page_sub_title t('views.users.restful.mypage.title') %>

<div id="users-mypage-ctrl"
     ng-controller="UsersMypageCtrl"
     data-comiket-id="<%= Comiket::MAIN_ID %>">

  <%= render 'share/page_title' %>

  <div class="row">
    <div class="col-md-2">
      <%= render 'users/restful/side_nav' %>
      <sidebar></sidebar>
    </div>

    <div class="col-md-10">
      <div class="row">
        <%= render 'users/restful/message_panels' %>
      </div>
      <!-- //.row -->
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <i class="fa fa-user fa-1x"></i> アカウント
              </h3>
            </div>
            <table class="table">
              <tbody>
                <tr>
                  <th>ユーザー名</th>
                  <td>{{ user.username }}</td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td>{{ user.email }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <!-- //.col -->
      </div>
    </div>
  </div>
</div>
