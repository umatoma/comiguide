<% set_page_sub_title t('views.users.new_confirmation') %>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= render 'share/page_title' %>

    <div class="well">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'share/validation_errors', resource: resource %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div><%= f.submit t('views.users.confirmations.new.form_submit'), class: "btn btn-submit" %></div>
      <% end %>
    </div>

    <%= render "users/shared/links" %>
  </div>
</div>
