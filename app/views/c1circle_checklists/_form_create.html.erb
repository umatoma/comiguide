<!-- form.form-create-c1circle-checklist -->
<form class="form-create-c1circle-checklist" name="form_create" onSubmit="return false;">
  <div class="row">
    <div class="col-xs-4">
      <div class="form-group">
        <label><%= C1block.model_name.human %></label>
        <select name="cblock_id"
                data-ng-options="b.id as b.name for b in new_c1circle_checklist.c1blocks"
                class="form-control"
                data-ng-model="new_c1circle_checklist.c1block_id">
        </select>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="form-group">
        <label><%= C1layout.model_name.human %></label>
        <select name="clayout_id"
                data-ng-options="l.id as l.space_no for l in new_c1circle_checklist.c1layouts"
                class="form-control"
                data-ng-model="new_c1circle_checklist.c1layout_id">
        </select>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="form-group">
        <label><%= C1circleChecklist.human_attribute_name(:space_no_sub) %></label>
        <select name="space_no_sub"
                data-ng-options="s.key as s.value for s in new_c1circle_checklist.space_no_subs"
                class="form-control"
                data-ng-model="new_c1circle_checklist.space_no_sub">
        </select>
      </div>
    </div>
  </div>
  <!-- //.row -->
  <div class="form-group">
    <label><%= C1circleChecklist.human_attribute_name(:circle_name) %></label>
    <input class="form-control"
           name="circle_name"
           type="text"
           data-ng-model="new_c1circle_checklist.circle_name">
  </div>
  <div class="form-group">
    <label><%= C1circleChecklist.human_attribute_name(:circle_url) %></label>
    <input class="form-control"
           name="circle_url"
           type="text"
           data-ng-model="new_c1circle_checklist.circle_url">
  </div>
  <div class="form-group">
    <label><%= C1circleChecklist.human_attribute_name(:comment) %></label>
    <input class="form-control"
           name="comment"
           type="text"
           data-ng-model="new_c1circle_checklist.comment">
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label><%= C1circleChecklist.human_attribute_name(:cost) %></label>
        <input class="form-control"
               name="cost"
               type="text"
               data-ng-model="new_c1circle_checklist.cost">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label><%= C1circleChecklist.human_attribute_name(:color) %></label>
        <checklist-colorpicker ng-model="new_c1circle_checklist.color"></checklist-colorpicker>
      </div>
    </div>
  </div>
  <!-- //.row -->
  <div class="btn btn-submit btn-block" ng-click="createCheckList(new_c1circle_checklist)">Create</div>
</form>
<!-- //form.form-create-c1circle-checklist -->
